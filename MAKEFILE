#Automatically generated file

CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra -I./src
SRC = src/main.cpp src/grid.cpp src/agent.cpp src/dijkstra.cpp
OBJ = $(SRC:.cpp=.o)
TARGET = grid_test

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $^

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ) $(TARGET)

.PHONY: all clean
